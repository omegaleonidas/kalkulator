<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:padding="15dp"
            android:id="@+id/ETanga1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:padding="15dp"
            android:id="@+id/ETanga2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ETanga1"/>


        <Button
            android:id="@+id/btnTambah"
            android:text="tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETanga2" />


        <Button

            android:id="@+id/btnkurang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETanga2"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/btnTambah"
            android:layout_toRightOf="@id/btnTambah"
            android:text="kurang" />


        <Button
            android:id="@+id/btnBagi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETanga2"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/btnKali"
            android:layout_toRightOf="@id/btnKali"
            android:text="bagi" />

        <Button
            android:id="@+id/btnKali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETanga2"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/btnkurang"
            android:layout_toRightOf="@id/btnkurang"
            android:text="kali" />

        <TextView
            android:id="@+id/tvHasil"
            android:text="30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnKali"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="188dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="193dp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>